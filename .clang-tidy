---
# Clang-tidy configuration for Kraken SDK
Checks: '*, -clang-diagnostic-c++14-attribute-extensions, -clang-analyzer-cplusplus.PlacementNew, -clang-analyzer-cplusplus.NewDeleteLeaks, -clang-diagnostic-deprecated-declarations, -readability-identifier-length, -readability-magic-numbers, -readability-convert-member-functions-to-static, -readability-implicit-bool-conversion, -readability-braces-around-statements, -cppcoreguidelines-avoid-magic-numbers, -cppcoreguidelines-narrowing-conversions, -bugprone-narrowing-conversions, -llvm-header-guard, -llvm-include-order, -llvmlibc-*, -altera-*, -modernize-use-trailing-return-type, -fuchsia-*, -concurrency-mt-unsafe, -modernize-use-nodiscard, -misc-definitions-in-headers, -misc-non-private-member-variables-in-classes, -cert-dcl59-cpp, -google-build-namespaces, -hicpp-braces-around-statements, -android-*, -zircon-*, -abseil-*'
WarningsAsErrors: 'clang-analyzer-*,bugprone-*,performance-*,readability-*,portability-*,cppcoreguidelines-*,cert-*,misc-*'
HeaderFilterRegex: '^(include|src)/.*'

